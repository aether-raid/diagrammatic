{
  "compilerOptions": {
    "paths": {
      "@shared/*": ["../shared/*"]
    },

    "noEmit": true,
    "outDir": "./dist/webview",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "references": [
    { "path": "../tsconfig.shared.json" },
  ]
}
